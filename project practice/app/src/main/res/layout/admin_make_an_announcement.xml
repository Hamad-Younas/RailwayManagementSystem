<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/makeannouncementxt"
        android:layout_width="271dp"
        android:layout_height="0dp"
        android:layout_marginStart="31dp"
        android:layout_marginTop="84dp"
        android:layout_marginBottom="19dp"
        android:text="Make an announcement"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/textView2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="48dp"
        android:layout_marginBottom="113dp"
        android:text="Countdown to big announcement"
        android:textSize="15sp"
        app:layout_constraintBottom_toTopOf="@+id/entermsgtxt"
        app:layout_constraintEnd_toEndOf="@+id/makeannouncementxt"
        app:layout_constraintTop_toBottomOf="@+id/makeannouncementxt" />

    <EditText
        android:id="@+id/entermsgtxt"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="31dp"
        android:layout_marginEnd="31dp"
        android:layout_marginBottom="128dp"
        android:ems="10"
        android:inputType="text"
        android:text="Enter your message"
        app:layout_constraintBottom_toTopOf="@+id/button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

    <Button
        android:id="@+id/button"
        android:layout_width="211dp"
        android:layout_height="0dp"
        android:layout_marginBottom="239dp"
        android:backgroundTint="#C5D7E4"
        android:text="Post your message"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/entermsgtxt" />

    <Button
        android:id="@+id/button5"
        android:layout_width="138dp"
        android:layout_height="52dp"
        android:backgroundTint="#C5D7E4"
        android:text="Back"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.941"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button"
        app:layout_constraintVertical_bias="0.833" />
</androidx.constraintlayout.widget.ConstraintLayout>