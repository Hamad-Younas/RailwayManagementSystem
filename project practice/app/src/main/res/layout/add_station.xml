<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <EditText
        android:id="@+id/stationnametxt"
        android:layout_width="348dp"
        android:layout_height="44dp"
        android:layout_marginTop="199dp"
        android:ems="10"
        android:inputType="text"
        android:text="Station Name"
        app:layout_constraintEnd_toEndOf="@+id/locationtxt"
        app:layout_constraintStart_toStartOf="@+id/locationtxt"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/locationtxt"
        android:layout_width="336dp"
        android:layout_height="59dp"
        android:layout_marginStart="54dp"
        android:layout_marginTop="61dp"
        android:ems="10"
        android:inputType="text"
        android:text="Station Location"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/stationnametxt" />

    <Button
        android:id="@+id/addbtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="86dp"
        android:text="Add"
        app:layout_constraintBaseline_toBaselineOf="@+id/backbtnstation"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/backbtnstation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="14dp"
        android:layout_marginBottom="212dp"
        android:text="Back"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/addbtn" />
</androidx.constraintlayout.widget.ConstraintLayout>