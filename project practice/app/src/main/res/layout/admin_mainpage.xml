<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/tripbtn3"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="13dp"
        android:backgroundTint="#C6D3DD"
        android:text="Manage Trains"
        android:textColorHighlight="#3F51B5"
        android:textColorHint="#322828"
        android:textColorLink="#BC8C8C"
        app:layout_constraintBottom_toTopOf="@+id/stationbtn"
        app:layout_constraintEnd_toEndOf="@+id/stationbtn"
        app:layout_constraintStart_toStartOf="@+id/stationbtn"
        app:layout_constraintTop_toBottomOf="@+id/imageView" />

    <Button
        android:id="@+id/stationbtn"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="281dp"
        android:backgroundTint="#C6D3DD"
        android:text="Manage Starion"
        android:textColorHighlight="#3F51B5"
        android:textColorHint="#322828"
        android:textColorLink="#BC8C8C"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/tripbtn7"
        app:layout_constraintStart_toStartOf="@+id/imageView"
        app:layout_constraintTop_toBottomOf="@+id/tripbtn3" />

    <Button
        android:id="@+id/tripbtn5"
        android:layout_width="217dp"
        android:layout_height="48dp"
        android:backgroundTint="#C6D3DD"
        android:text="Manage Customer Queries"
        android:textColorHighlight="#3F51B5"
        android:textColorHint="#322828"
        android:textColorLink="#BC8C8C"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/stationbtn"
        app:layout_constraintVertical_bias="0.072" />

    <Button
        android:id="@+id/tripbtn6"
        android:layout_width="217dp"
        android:layout_height="48dp"
        android:backgroundTint="#C6D3DD"
        android:text="Manage Customer Queries"
        android:textColorHighlight="#3F51B5"
        android:textColorHint="#322828"
        android:textColorLink="#BC8C8C"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tripbtn5"
        app:layout_constraintVertical_bias="0.202" />

    <Button
        android:id="@+id/tripbtn7"
        android:layout_width="217dp"
        android:layout_height="48dp"
        android:backgroundTint="#C6D3DD"
        android:text="Manage Announcement"
        android:textColorHighlight="#3F51B5"
        android:textColorHint="#322828"
        android:textColorLink="#BC8C8C"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.52"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tripbtn6"
        app:layout_constraintVertical_bias="0.252" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="226dp"
        android:layout_height="0dp"
        android:layout_marginBottom="14dp"
        app:layout_constraintBottom_toTopOf="@+id/tripbtn3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/dettextuser2"
        app:srcCompat="@drawable/train" />

    <TextView
        android:id="@+id/dettextuser2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="27dp"
        android:layout_marginBottom="30dp"
        android:text="Seize the Moment: Time to Manage"
        android:textSize="16dp"
        app:layout_constraintBottom_toTopOf="@+id/imageView"
        app:layout_constraintStart_toStartOf="@+id/welcometxt3"
        app:layout_constraintTop_toBottomOf="@+id/welcometxt3" />

    <TextView
        android:id="@+id/welcometxt3"
        android:layout_width="170dp"
        android:layout_height="0dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="65dp"
        android:layout_marginBottom="15dp"
        android:text="Welcome "
        android:textSize="20dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/dettextuser2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>